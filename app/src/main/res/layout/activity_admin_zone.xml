<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F6F9"
    android:padding="16dp"
    tools:context=".AdminZone">

    <!-- Dynamic Quote Text -->
    <TextView
        android:id="@+id/tvQuote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Loading inspiration..."
        android:textSize="18sp"
        android:textColor="#2D3748"
        android:fontFamily="@font/cabin_semibold"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dynamic Image from Internet -->
    <ImageView
        android:id="@+id/ivQuoteImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:contentDescription="Inspirational Image"
        app:layout_constraintTop_toBottomOf="@id/tvQuote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Add Product Button -->
    <Button
        android:id="@+id/btadd"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_admin_button"
        android:text="Add Product"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/cabin_semibold"
        app:layout_constraintTop_toBottomOf="@id/ivQuoteImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Show Product Button -->
    <Button
        android:id="@+id/btshow"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_admin_button"
        android:text="Show Product"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/cabin_semibold"
        app:layout_constraintTop_toBottomOf="@id/btadd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
