<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#F4F8FB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/cardimg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:contentDescription="Product Image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/productName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A2B3C"
            app:layout_constraintStart_toEndOf="@id/cardimg"
            app:layout_constraintTop_toTopOf="@id/cardimg"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Quantity and Unit -->
        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#445566"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/cardimg"
            app:layout_constraintTop_toBottomOf="@id/productName" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:textColor="#445566"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/quantity"
            app:layout_constraintTop_toBottomOf="@id/productName"
            android:layout_marginStart="4dp" />

        <!-- Cost -->
        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2.99"
            android:textColor="#007B83"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/quantity"
            app:layout_constraintStart_toEndOf="@id/cardimg" />

        <!-- Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Description goes here..."
            android:textColor="#1A237E"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:clickable="true"
            android:focusable="true"
            android:textStyle="italic"
            android:paddingTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/cost"
            app:layout_constraintStart_toEndOf="@id/cardimg"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="#FFEBEE"
            android:background="@drawable/circle_button_background"
            android:padding="6dp"
            android:src="@drawable/baseline_delete_24"
            android:contentDescription="Delete"
            app:tint="#E53935"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Update Button -->
        <ImageButton
            android:id="@+id/updateButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="#E3F2FD"
            android:background="@drawable/circle_button_background"
            android:padding="6dp"
            android:src="@drawable/baseline_flip_camera_android_24"
            android:contentDescription="Update"
            app:tint="#1976D2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deleteButton"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
